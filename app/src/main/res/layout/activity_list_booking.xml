<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_item"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:clickable="true"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout

                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#49000000"/>

            <RelativeLayout
                android:id="@+id/relative"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView

                    android:text="Kode Booking :"
                    android:textSize="25dp"
                    android:textColor="#EF504D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtidbooking"
                    android:text="ini id booking"
                    android:textSize="25dp"
                    android:layout_marginLeft="180dp"
                    android:textColor="#EF504D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txttipemobil"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtidbooking"
                    android:layout_marginTop="5dp"
                    android:text="ini jenis mobil"
                    android:textColor="#EF504D"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtjenisservis"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txttipemobil"
                    android:layout_marginTop="5dp"
                    android:text="ini jenis servis"
                    android:textColor="#EF504D"
                    android:textSize="20dp" />


                <Button
                    android:id="@+id/btnDetail"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtidbooking"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="240dp"
                    android:text="DETAIL"
                    android:textColor="#FFFFFF"
                    android:background="#EF504D"

                    />

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtjenisservis"
                    android:layout_marginTop="5dp"
                    android:text="Pickup :"
                    android:textColor="#EF504D"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtpickup"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtjenisservis"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="75dp"
                    android:textColor="#EF504D"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtjenisservis"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="5dp"
                    android:text="Total Biaya :"
                    android:textColor="#EF504D"
                    android:textSize="20dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txttotalbiaya"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtjenisservis"
                    android:layout_marginLeft="245dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#EF504D"
                    android:textSize="20dp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtpickup"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="90dp"
                    android:text="Tanggal Servis :"
                    android:textColor="#EF504D"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txttanggal"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtpickup"
                    android:layout_marginTop="5dp"
                    android:text="ini tanggal"
                    android:layout_marginLeft="250dp"
                    android:textColor="#EF504D"
                    android:textSize="20dp" />

                <TextView

                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txttanggal"
                    android:layout_marginTop="5dp"
                    android:text="Estimasi selesai :"
                    android:layout_marginLeft="80dp"
                    android:textColor="#EF504D"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtestimasi"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txttanggal"
                    android:layout_marginTop="5dp"
                    android:text="ini estimasi"
                    android:layout_marginLeft="250dp"
                    android:textColor="#EF504D"
                    android:textSize="20dp" />








            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

